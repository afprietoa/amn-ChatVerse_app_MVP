<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- CoordinatorLayout for BottomAppBar -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="698dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- BottomAppBar -->
        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/white"
            app:background="@drawable/bottom_app_bar_background"
            app:fabCradleMargin="10dp"
            app:fabCradleRoundedCornerRadius="60dp" />

        <!-- FloatingActionButton -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            style="@style/CustomFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#005ADB"
            android:contentDescription="@string/add_message"
            android:padding="12dp"
            android:src="@drawable/nav_newuser"
            app:fabSize="normal"
            app:layout_anchor="@id/bottom_app_bar"
            app:layout_anchorGravity="center"
            app:tint="@null" />

        <!-- BottomNavigationView -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/transparent"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            app:backgroundTint="@color/nav_background_color"
            app:elevation="0dp"
            app:itemHorizontalTranslationEnabled="false"
            app:itemIconTint="@color/nav_item_color_selector"
            app:itemRippleColor="@color/nav_item_ripple_color"
            app:itemTextColor="@color/nav_item_color_selector"
            app:layout_anchor="@+id/bottom_app_bar"
            app:layout_anchorGravity="bottom|center"
            app:menu="@menu/barnav_fab_chat" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
