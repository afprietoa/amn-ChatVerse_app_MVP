<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat_Conversations_Fragments">

    <RelativeLayout
        android:id="@+id/toolbarRL"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageButton
            android:id="@+id/IbRegresar"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/toolbarIv"
            android:layout_centerVertical="true"
            android:src="@drawable/perfil_usuario"
            android:layout_toStartOf="@+id/txt_nombres_usuario"
            android:layout_marginEnd="7dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/txt_nombres_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/txt_nombres_usuario"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_estado_chat"
            android:text="@string/txt_estado_chat"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:layout_below="@id/txt_nombres_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="#ccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatsRV"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_below="@+id/toolbarRL"
        android:padding="5dp"
        tools:listitem="@layout/item_chat_right"
        android:layout_above="@+id/View2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/RL_mensaje"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/Et_mensaje_chat"
            android:hint="@string/Et_mensaje_chat"
            android:padding="10dp"
            android:layout_toStartOf="@id/adjuntarFAB"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/adjuntarFAB"
            android:layout_centerVertical="true"
            app:fabSize="mini"
            android:elevation="0dp"
            android:layout_toStartOf="@+id/enviarFAB"
            android:layout_marginEnd="7dp"
            android:src="@drawable/ico_imagen_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/enviarFAB"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:fabSize="mini"
            android:elevation="0dp"
            android:src="@drawable/ico_enviar_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:id="@+id/View2"
        android:background="#ccc"
        android:layout_above="@+id/RL_mensaje"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>